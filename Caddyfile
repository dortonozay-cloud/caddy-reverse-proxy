# global options
{
	admin off 
	persist_config off 
	auto_https off 
	# runtime logs
	log {
		format json
	}
	# server options
	servers {
		trusted_proxies static private_ranges # trust railway's proxy
	}
}

# Snippet for Load Balancing configuration
(lb_settings) {
	lb_policy round_robin
	lb_retries 100
	lb_try_duration 10s
	lb_try_interval 250ms
}

# Snippet for Passive Health Checks
(passive_health_checks) {
	fail_duration 60s
	max_fails 300
	unhealthy_latency 5s
	unhealthy_request_count 200
}

# Main Site Block: Listens on the $PORT assigned by Railway
:{$PORT} {
	# Access logs
	log {
		format json
	}
    
	# --------------------------------------------------------------------------
	# 1. API Route: Proxy requests starting with /api/ to the Backend service
	# --------------------------------------------------------------------------
	@api path /api/*
	handle @api {
		reverse_proxy {
			# Direct traffic to the Backend service using its variables
			dynamic a {
				name {$BACKEND_DOMAIN}
				port {$BACKEND_PORT}
				refresh 1s
				dial_timeout 30s
				versions ipv4 ipv6
			}
			import lb_settings
			import passive_health_checks
		}
	}

	# --------------------------------------------------------------------------
	# 2. Default Route: Proxy all other requests to the Frontend service
	# --------------------------------------------------------------------------
	handle {
		reverse_proxy {
			# Direct traffic to the Frontend service using its variables
			dynamic a {
				name {$FRONTEND_DOMAIN}
				port {$FRONTEND_PORT}
				refresh 1s
				dial_timeout 30s
				versions ipv4 ipv6
			}
			import lb_settings
			import passive_health_checks
		}
	}
}
